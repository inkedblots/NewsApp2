<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_root"
    style="@style/list_item_root">

    <TextView
        android:id="@+id/title"
        style="@style/title"
        tools:text="News article lead" />

    <LinearLayout
        android:id="@+id/linear_layout2"
        style="@style/linear_layout2">

        <TextView
            android:id="@+id/section"
            style="@style/section"
            tools:text="@string/news_section" />

        <TextView
            android:id="@+id/author"
            style="@style/author"
            tools:text="@string/author_name" />

        <TextView
            android:id="@+id/date"
            style="@style/date"
            tools:text="@string/date_text" />
    </LinearLayout>
</LinearLayout>